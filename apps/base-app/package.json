{
  "private": true,
  "name": "@deur/base-app",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "lint": "eslint --ext js,ts,tsx .",
    "dev": "expo start",
    "build": "expo export --output-dir ./build --platform all",
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "eas-build-pre-install": "npm install --global pnpm@7.x",
    "eas-build-post-install": "pnpm run -w build:mobile"
  },
  "dependencies": {
    "@deur/design-system": "*",
    "@deur/shared-hooks": "*",
    "@deur/shared-types": "*",
    "@deur/tailwind-config": "*",
    "@expo-google-fonts/ubuntu": "^0.2.2",
    "@faker-js/faker": "^7.6.0",
    "@react-native-async-storage/async-storage": "~1.17.3",
    "@react-native-picker/picker": "^2.4.8",
    "@tanstack/react-query": "^4.22.0",
    "axios": "^1.2.2",
    "babel-plugin-module-resolver": "^5.0.0",
    "expo": "^47.0.0",
    "expo-constants": "~14.0.2",
    "expo-dev-client": "~2.0.0",
    "expo-device": "~5.0.0",
    "expo-font": "~11.0.1",
    "expo-linear-gradient": "~12.0.1",
    "expo-linking": "~3.3.0",
    "expo-router": "0.0.43",
    "expo-secure-store": "~12.0.0",
    "expo-splash-screen": "~0.17.5",
    "expo-sqlite": "~11.0.0",
    "expo-status-bar": "~1.4.2",
    "expo-updates": "~0.15.4",
    "nativewind": "^2.0.11",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "react-native": "0.70.5",
    "react-native-safe-area-context": "4.4.1",
    "react-native-screens": "~3.18.0",
    "react-native-user-inactivity": "^1.2.0",
    "react-native-web": "~0.18.7",
    "react-query": "^3.39.2",
    "reflect-metadata": "^0.1.13",
    "rn-swipe-button": "^1.3.8",
    "swr": "^2.0.0",
    "typeorm": "^0.3.11",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@config-plugins/detox": "^4.0.0",
    "@deur/eslint-config": "*",
    "@types/react": "~18.0.25",
    "@types/react-dom": "~18.0.8",
    "@types/react-native": "~0.70.6",
    "@types/uuid": "^3.4.7",
    "babel-preset-expo": "~9.2.1",
    "tailwindcss": "^3.2.4"
  },
  "eslintConfig": {
    "extends": "@deur/eslint-config",
    "ignorePatterns": [
      "node_modules",
      "build",
      ".expo",
      ".expo-shared"
    ],
    "overrides": [
      {
        "files": [
          "*.js"
        ],
        "env": {
          "node": true
        }
      }
    ]
  }
}
