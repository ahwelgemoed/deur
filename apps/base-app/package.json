{
  "private": true,
  "name": "@deur/base-app",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --ext js,ts,tsx .",
    "dev": "expo start",
    "build": "expo export --output-dir ./build --platform all",
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "eas-build-pre-install": "npm install --global pnpm@7.x",
    "eas-build-post-install": "pnpm run -w build:mobile"
  },
  "dependencies": {
    "expo": "^47.0.0",
    "expo-dev-client": "~2.0.0",
    "expo-status-bar": "~1.4.2",
    "expo-updates": "~0.15.4",
    "nativewind": "^2.0.11",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "react-native": "0.70.5",
    "react-native-web": "~0.18.7",
    "@deur/shared-hooks": "*",
    "@deur/shared-types": "*"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@deur/eslint-config": "*",
    "@types/react": "~18.0.25",
    "@types/react-dom": "~18.0.8",
    "@types/react-native": "~0.70.6",
    "babel-preset-expo": "~9.2.1",
    "tailwindcss": "^3.2.4"
  },
  "eslintConfig": {
    "extends": "@deur/eslint-config",
    "ignorePatterns": [
      "node_modules",
      "build",
      ".expo",
      ".expo-shared"
    ],
    "overrides": [
      {
        "files": [
          "*.js"
        ],
        "env": {
          "node": true
        }
      }
    ]
  }
}
