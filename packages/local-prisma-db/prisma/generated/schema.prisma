generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}
generator zod {
 provider= "zod-prisma"
 modelSuffix              = "LocalModel" 
  output = "../../shared-types/src/local-prisma-types"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev(local).db"
}

model Local_User {
  id         Int      @id @unique
  birthDay   DateTime
  name       String?
  cardNumber String   @unique
  isAllowed  Boolean  @default(false)
  location   String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
