{
  "private": true,
  "name": "@deur/design-system",
  "version": "1.0.0",
  "description": "@deur design system for React (Native)",
  "license": "MIT",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "react-native": "./src/index.ts",
  "files": [
    "build",
    "src"
  ],
  "scripts": {
    "dev": "tsup --watch --silent",
    "lint": "eslint --ext js,ts,tsx .",
    "test": "jest",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "build": "tsup --clean"
  },
  "dependencies": {
    "expo-constants": "~14.0.2",
    "expo-linking": "~3.3.0",
    "expo-router": "1.0.0-rc6",
    "expo-status-bar": "~1.4.2",
    "nativewind": "^2.0.11",
    "react-native-safe-area-context": "4.4.1",
    "react-native-screens": "~3.18.0"
  },
  "devDependencies": {
    "@deur/eslint-config": "*",
    "@testing-library/jest-native": "^5.4.1",
    "@testing-library/react-native": "^11.4.0",
    "@tsconfig/recommended": "^1.0.1",
    "@types/jest": "^26.0.24",
    "@types/react": "~18.0.25",
    "@types/react-native": "~0.70.6",
    "babel-preset-expo": "~9.2.1",
    "jest": "^26.6.3",
    "jest-expo": "^47.0.1",
    "react": "18.1.0",
    "react-native": "^0.70.5",
    "react-test-renderer": "18.1.0",
    "tailwindcss": "^3.2.4",
    "tsup": "^6.5.0"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-web": "*"
  },
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    },
    "react-native-web": {
      "optional": true
    }
  },
  "eslintConfig": {
    "extends": "@deur/eslint-config",
    "ignorePatterns": [
      "node_modules",
      "build"
    ]
  },
  "jest": {
    "preset": "jest-expo",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/"
    ]
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "outDir": "build",
    "sourcemap": true,
    "dts": true,
    "external": [
      "react",
      "react-native",
      "react-native-web"
    ]
  }
}
