{
  "private": true,
  "name": "@deur/monorepo",
  "scripts": {
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "build": "turbo build",
    "build:mobile": "turbo build --filter=\"...{./apps/base-app}\"",
    "build:web": "turbo build --filter=\"...{./apps/base-web}\"",
    "dev:base:app": "npm run dev -- --filter @deur/base-app",
    "dev:base:servers": "npm run dev -- --filter @deur/base-mqtt --filter @deur/base-cloud --filter @deur/base-local"
  },
  "devDependencies": {
    "turbo": "^1.5.4",
    "typescript": "^4.8.3"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/*",
        "expo-modules-*",
        "typescript"
      ]
    },
    "patchedDependencies": {
      "eslint-config-universe@11.1.1": "./packages/eslint-config/patches/eslint-config-universe@11.1.1.patch",
      "react-native@0.70.5": "./apps/base-app/patches/react-native@0.70.5.patch"
    }
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
